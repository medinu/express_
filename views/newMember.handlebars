<h1 class="text-center mb-3" >Add new member</h1>
<form action="/api/members" method="post" class="mb-4">
    <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" name='first_name' class="form-control">
    </div>
    <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" name='last_name' class="form-control">
    </div>
    <div class="form-group">
        <label for="relation">Relation</label>
        <input type="text" name='relation' class="form-control">
    </div>
    <input type="submit" value="Add member" class="btn btn-primary btn-block">
</form>

<ul class="list-group">
    {{#each members}}
    <li class="list-group-item">{{this.first_name}} {{this.last_name}}: {{this.relation}}</li>
    {{/each}}
</ul>

